<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/assets/bootstrapstyle.css">
        <title>School App</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">MySchool</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>   
               <div class="collapse navbar-collapse" id="navbarNavAltMarkup"> 
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" href="#">Signed in as <%= user.username %></a>
                    <a class="nav-link" href="/logout">Log Out</a>
                </div>
            </div>
        </nav>
        <div class="container">
            <header class="mt-4 mb-3 p-5 bg-dark text-white rounded" id="jumbotron">
                <h1><i class="bi bi-campground"></i>Student List For <%= user.Class %></h1>
                <p>Form Teacher: <%= user.FirstName %></p>
                <P>
                    <a class="btn btn-primary btn-lg" href="/students/new">Add new student</a>
                </P>
            </header>

            <table class="table">
                <thead>
                    <tr>
                        <!-- <th scope="col">Id</th> -->
                        <th scope="col">First Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Class</th>
                        <th scope="col">Sex</th>
                        <th scope="col">Portal Id</th>
                        <th scope="col">Paid</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach((student)=>{ %>
                        <tr>
                            <!-- <th scope="row"><%= student._id %></th> -->
                            <td><%= student.firstName %></td>
                            <td><%= student.middleName %></td>
                            <td><%= student.surName %></td>
                            <td><%= student.class %></td>
                            <td><%= student.sex %></td>
                            <td><%= student.PortalId %></td>
                            <% if(student.paid == true){ %>
                                <td>True</td>
                            <% }else{ %>
                                <td>False</td>
                            <% } %>
                            <td>
                                <a class="btn btn-dark btn-sm" href="/students/<%= student._id %>">View</a>
                                <a class="btn btn-dark btn-sm" href="/students/<%= student._id %>/update">Update</a>
                                <form style="display: inline;"  id="camp-del-form" action="/students/<%= student._id %>/publishResult" method="post">
                                    <button class="btn btn-dark btn-sm">Publish Result</button>
                                </form>
                                <form style="display: inline;"  id="camp-del-form" action="/students/<%= student._id %>/delete?_method=delete" method="post">
                                    <button class="btn btn-dark btn-sm">Delete Student</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            
        </div>

<%- include ("partials/footer") %>